@model SORAPC_API.Models.ProductStatus
@{
    ViewData["Title"] = "Удалить статус продукта";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Удалить статус продукта</h2>
    <div class="card shadow p-4">
        <h3 class="text-danger text-center">Вы уверены, что хотите удалить этот статус?</h3>
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.IdProductStatus</dd>
            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">
                @{
                    string statusName = Model.IdProductStatus == 1 ? "В наличии" :
                    Model.IdProductStatus == 2 ? "Нет в наличии" :
                    Model.Title ?? "Неизвестный статус";
                    <span class="badge @(Model.IdProductStatus == 1 ? "bg-success" : "bg-danger")">@statusName</span>
                }
            </dd>
        </dl>
        <form asp-action="DeleteProductStatus" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="IdProductStatus" />
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger">Удалить</button>
                <a asp-action="ProductStatus" asp-controller="Admin" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>