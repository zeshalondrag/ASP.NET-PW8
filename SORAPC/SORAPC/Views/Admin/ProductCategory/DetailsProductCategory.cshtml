@model SORAPC_API.Models.ProductCategory
@{
    ViewData["Title"] = "Детали категории продукта";
}

<div class="container mt-5 pt-5">
    <h2 class="text-center mb-4">Детали категории продукта</h2>
    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.IdProductCategory</dd>
            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">
                @{
                    string categoryName = Model.IdProductCategory == 1 ? "Материнская плата" :
                    Model.IdProductCategory == 2 ? "Видеокарта" :
                    Model.IdProductCategory == 3 ? "Процессор" :
                    Model.IdProductCategory == 4 ? "Система охлаждения" :
                    Model.IdProductCategory == 5 ? "Оперативная память" :
                    Model.IdProductCategory == 6 ? "Блок питания" :
                    Model.IdProductCategory == 7 ? "Жесткий диск/SSD" :
                    Model.IdProductCategory == 8 ? "Корпус" :
                    Model.IdProductCategory == 9 ? "Периферия" :
                    Model.Title ?? "Неизвестная категория";
                    <span class="badge bg-info">@categoryName</span>
                }
            </dd>
        </dl>
        <div class="text-center mt-4">
            <a asp-action="EditProductCategory" asp-route-id="@Model.IdProductCategory" class="btn btn-primary">Изменить</a>
            <a asp-action="ProductCategory" class="btn btn-secondary">Назад</a>
        </div>
    </div>
</div>