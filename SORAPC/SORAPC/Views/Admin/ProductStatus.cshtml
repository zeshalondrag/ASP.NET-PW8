@model IEnumerable<SORAPC_API.Models.ProductStatus>
@{
    ViewBag.Title = "Список статусов продуктов";
}

<div class="container mt-5 pt-5">
    <h2 class="text-center mb-4">Список статусов продуктов</h2>
    <div class="mb-3">
        <a asp-action="Admin" asp-controller="Admin" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i> Назад к панели
        </a>
    </div>
    <div class="mb-3">
        <a asp-action="CreateProductStatus" asp-controller="Admin" class="btn btn-success">
            <i class="fas fa-plus"></i> Добавить статус
        </a>
    </div>
    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Название статуса</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdProductStatus</td>
                            <td>
                                @{
                                    string statusName = item.IdProductStatus == 1 ? "В наличии" :
                                    item.IdProductStatus == 2 ? "Нет в наличии" :
                                    item.Title ?? "Неизвестный статус";
                                    <span class="badge @(item.IdProductStatus == 1 ? "bg-success" : "bg-danger")">@statusName</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditProductStatus" asp-route-id="@item.IdProductStatus" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Изменить
                                </a>
                                <a asp-action="DetailsProductStatus" asp-route-id="@item.IdProductStatus" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i> Детали
                                </a>
                                <a asp-action="DeleteProductStatus" asp-route-id="@item.IdProductStatus" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Удалить
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}