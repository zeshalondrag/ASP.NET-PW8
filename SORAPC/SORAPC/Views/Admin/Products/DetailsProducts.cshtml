@model SORAPC_API.Models.Product
@{
    ViewData["Title"] = "Детали продукта";
}

<div class="container mt-5 pt-5">
    <h2 class="text-center mb-4">Детали продукта</h2>
    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.IdProduct</dd>
            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">@Model.Names</dd>
            <dt class="col-sm-3">Цена</dt>
            <dd class="col-sm-9">@Model.Price</dd>
            <dt class="col-sm-3">Описание</dt>
            <dd class="col-sm-9">@Model.Descriptions</dd>
            <dt class="col-sm-3">Количество</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>
            <dt class="col-sm-3">Статус</dt>
            <dd class="col-sm-9">
                @{
                    string status = Model.ProductStatusId == 1 ? "В наличии" :
                    Model.ProductStatusId == 2 ? "Нет в наличии" :
                    "Неизвестно";
                    <span class="badge @(Model.ProductStatusId == 1 ? "bg-success" : "bg-danger")">@status</span>
                }
            </dd>
            <dt class="col-sm-3">Категория</dt>
            <dd class="col-sm-9">
                @{
                    string category = Model.ProductCategoryId == 1 ? "Материнская плата" :
                    Model.ProductCategoryId == 2 ? "Видеокарта" :
                    Model.ProductCategoryId == 3 ? "Процессор" :
                    Model.ProductCategoryId == 4 ? "Система охлаждения" :
                    Model.ProductCategoryId == 5 ? "Оперативная память" :
                    Model.ProductCategoryId == 6 ? "Блок питания" :
                    Model.ProductCategoryId == 7 ? "Жесткий диск/SSD" :
                    Model.ProductCategoryId == 8 ? "Корпус" :
                    Model.ProductCategoryId == 9 ? "Периферия" :
                    "Неизвестно";
                    @category
                }
            </dd>
            <dt class="col-sm-3">Изображение</dt>
            <dd class="col-sm-9">
                <img src="@Model.Img" alt="@Model.Names" class="img-fluid" style="max-width: 200px;" />
            </dd>
        </dl>
        <div class="text-center mt-4">
            <a asp-action="EditProducts" asp-route-id="@Model.IdProduct" class="btn btn-primary">Изменить</a>
            <a asp-action="Products" class="btn btn-secondary">Назад</a>
        </div>
    </div>
</div>