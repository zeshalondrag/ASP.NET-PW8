@model dynamic
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 p-4 auth-card" style="max-width: 700px; width: 100%;">
        <!-- Заголовок -->
        <div class="card-header bg-transparent text-center border-0">
            <h2 class="fw-bold text-primary mb-0">
                <i class="fas fa-user-plus me-2"></i> Регистрация
            </h2>
        </div>

        <!-- Тело формы -->
        <div class="card-body">
            <form method="post" asp-controller="Auth" asp-action="Register">
                <div class="row g-3">
                    <!-- Левая колонка -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="UserSurname" class="form-label fw-semibold text-muted">
                                <i class="fas fa-user me-2"></i> Фамилия
                            </label>
                            <input required type="text" class="form-control rounded-pill" name="UserSurname" id="UserSurname" placeholder="Введите фамилию">
                        </div>
                        <div class="mb-3">
                            <label for="UserName" class="form-label fw-semibold text-muted">
                                <i class="fas fa-user me-2"></i> Имя
                            </label>
                            <input required type="text" class="form-control rounded-pill" name="UserName" id="UserName" placeholder="Введите имя">
                        </div>
                        <div class="mb-3">
                            <label for="UserMiddlename" class="form-label fw-semibold text-muted">
                                <i class="fas fa-user me-2"></i> Отчество
                            </label>
                            <input required type="text" class="form-control rounded-pill" name="UserMiddlename" id="UserMiddlename" placeholder="Введите отчество">
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label fw-semibold text-muted">
                                <i class="fas fa-envelope me-2"></i> Email
                            </label>
                            <input required type="email" class="form-control rounded-pill" name="Email" id="Email" placeholder="Введите email">
                        </div>
                        <div class="mb-3">
                            <label for="Phone" class="form-label fw-semibold text-muted">
                                <i class="fas fa-phone me-2"></i> Телефон
                            </label>
                            <input required type="tel" class="form-control rounded-pill" name="Phone" id="Phone" placeholder="Введите номер телефона">
                        </div>
                    </div>

                    <!-- Правая колонка -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="Logins" class="form-label fw-semibold text-muted">
                                <i class="fas fa-user-tag me-2"></i> Логин
                            </label>
                            <input required type="text" class="form-control rounded-pill" name="Logins" id="Logins" placeholder="Введите логин">
                        </div>
                        <div class="mb-4">
                            <label for="Passwords" class="form-label fw-semibold text-muted">
                                <i class="fas fa-lock me-2"></i> Пароль
                            </label>
                            <div class="input-group">
                                <input required type="password" class="form-control rounded-pill" name="Passwords" id="Passwords" placeholder="Введите пароль">
                                <button type="button" class="btn btn-outline-secondary rounded-pill" onclick="togglePassword()">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Кнопка -->
                <button type="submit" class="btn btn-primary btn-block rounded-pill fw-semibold mt-3">
                    <i class="fas fa-check me-2"></i> Зарегистрироваться
                </button>

                <!-- Сообщение об ошибке -->
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger mt-3 rounded-3" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </form>

            <!-- Ссылка на авторизацию -->
            <div class="text-center mt-3">
                <a asp-controller="Auth" asp-action="Login" class="text-primary text-decoration-none fw-semibold">
                    Уже есть аккаунт? Войдите!
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-card {
        background: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .auth-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .min-vh-100 {
        min-height: 100vh;
    }
</style>

<script>
    function togglePassword() {
        const passwordField = document.getElementById("Passwords");
        const type = passwordField.type === "password" ? "text" : "password";
        passwordField.type = type;
    }
</script>