@model double

<style>
    .average-rating {
        font-size: 16px;
        color: #333;
        margin-bottom: 10px;
    }

    .average-rating .stars {
        color: #ffc107;
    }

    .average-rating .star {
        font-size: 20px;
    }

    .average-rating .star.filled {
        color: #ffc107;
    }
</style>

<div class="average-rating">
    <span class="stars">
        @for (int i = 0; i < Model; i++)
        {
            <span class="star fas fa-star me-1 @(i < Model ? "filled" : "")"></span>
        }
    </span>
    <span>(@Model.ToString("0.0"))</span>
</div>